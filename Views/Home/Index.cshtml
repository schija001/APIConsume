@model IEnumerable<People>
@{ Layout = "_Layout"; ViewBag.Title = "All People";}

<h2>All People</h2>
<a asp-action="AddPeople" class="btn btn-sm btn-primary">Add Person</a>
<a asp-action="GetPerson" class="btn btn-sm btn-secondary">Get Person</a>


<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>People ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.PeopleId</td>
                <td>@r.FirstName</td>
                <td>@r.LastName</td>
                <td>@r.PhoneNumber</td>
                <td>
                    <a asp-action="UpdatePeoplePatch" asp-route-id="@r.PeopleId">
                        Edit
                    </a>
                </td>
                <td>
                    <form asp-action="DeleteReservation" method="post">
                        <input type="hidden" value="@r.PeopleId" name="ReservationId" />
                        <input type="image" src="/icon/delete.png" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>