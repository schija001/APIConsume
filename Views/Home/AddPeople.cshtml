@model People
@{ Layout = "_Layout"; ViewBag.Title = "Add a Person";}

<h2>Add  Person <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddPeople" method="post">
    <div class="form-group">
        <label for="FirstName">First Name:</label>
        <input class="form-control" name="FirstName" />
    </div>
    <div class="form-group">
        <label for="LastName">Last Name:</label>
        <input class="form-control" name="LastName" />
    </div>
    <div class="form-group">
        <label for="PhoneNumber">PhoneNumber:</label>
        <input class="form-control" name="PhoneNumber" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

<h3 class="alert">@ViewBag.Result</h3>

@if (Model != null)
{
<p>Person bellow was added to studioASG database, transaction was looged on text file (~\bin\Debug\net5.0\nlog-all.txt) , Log table, and Command window </p>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.FirstName</td>
                <td>@Model.LastName</td>
                <td>@Model.PhoneNumber</td>
            </tr>
        </tbody>
    </table>
}